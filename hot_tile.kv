<MainGrid>
    orientation: 'vertical'
    gameGrid: []
    hotTile: None
    gridSize: 10
    time: 0
    score: 0
    timeClockEvent: None
    Label:
        text: 'Hot Tile'
        font_size: 30
        size_hint_y: None
        size_hint: (1, 0.1)
    GridLayout:
        cols: 2
        size_hint: (1, 0.1)
        Label:
            text: 'Time: 00:00'
            font_size: 20
            id: time_label
        Label:
            text: 'Score: 0'
            font_size: 20
            id: score_label
    GridLayout:
        id: game_grid
        size_hint_y: None
        size_hint: (1, 0.7)
        on_kv_post: root.create_game()
    GridLayout:
        cols: 2
        size_hint: (1, 0.1)
        Button:
            text: 'Start'
            on_press: root.start_game()
        Button:
            text: 'Reset'
            on_press: root.reset_game()

<Tile>
    on_press: root.click()